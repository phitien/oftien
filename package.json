  "scripts": {
    "setup": "sh setup.sh",
    "ssr": "echo \"ENV=${ENV:-production}\" > .env && node src/ssr",
    "build": "echo \"ENV=${ENV:-production}\" > .env && oftien run build",
    "test": "echo \"ENV=${ENV:-local}\" > .env && oftien run test",
    "start": "concurrently \"npm run be\" \"npm run ui\"",
    "ui": "echo \"ENV=${ENV:-local}\" > .env && oftien run start",
    "ui-bg": "echo \"ENV=${ENV:-local}\" > .env && oftien run build && forever start -c \"yarn run ssr\" ./",
    "be": "echo \"ENV=${ENV:-local}\" > .env && node services/api/app.js",
    "be-bg": "echo \"ENV=${ENV:-local}\" > .env && forever start services/api/app.js",
    "bambu.life": "echo \"ENV=${ENV:-\"bambu.life\"}\" > .env && oftien run start",
    "bambu.life-bg": "echo \"ENV=${ENV:-bambu.life}\" > .env && oftien run build && forever start -c \"yarn run bambu.life-ssr\" ./",
    "bambu.life-build": "echo \"ENV=${ENV:-bambu.life}\" > .env && oftien run build",
    "bambu.life-ssr": "echo \"ENV=${ENV:-bambu.life}\" > .env && node src/ssr",
    "preinstall": "if [ -d \"node_modules\" ]; then \n cd node_modules && rm -rf @oftien-tools && cd .. \nfi",
    "postinstall": "cd node_modules && ln -s ../oftien-tools @oftien-tools && cd .."
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "nodemonConfig": {
    "ignore": [
      "db/*",
      "test/*"
    ]
  }
}
